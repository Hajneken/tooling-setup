// considering ctrl+shift+alt+cmd+a is remapped on the system to home for the usecases of Terminal
// home shift+\\ should really be ctrl+shift+alt+cmd+|
[
  {
    "key": "home shift+\\",
    "command": "workbench.action.splitEditorRight"
  },
  {
    "key": "cmd+n",
    "command": "explorer.newFile"
  },
  {
    "key": "ctrl+shift+alt+cmd+s",
    "command": "editor.action.insertSnippet",
    "args": { "name": "Standalone Tag" }
  },
  {
    "key": "ctrl+shift+alt+cmd+w",
    "command": "editor.action.insertSnippet",
    "args": { "name": "Tag" },
  },
  {
    "key": "ctrl+shift+alt+cmd+f",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
  },
  {
    "key": "shift+alt+f",
    "command": "-editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
  },
  {
    "key": "home",
    "command": "workbench.action.keychord.leader"
  },
  {
    "key": "cmd+k",
    "command": "-workbench.action.keychord.leader"
  },
  {
    "key": "home o",
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "home n",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "cmd+d",
    "command": "go.debug.cursor"
  },
  {
    "key": "ctrl+shift+alt+cmd+i",
    "command": "editor.action.openLink",
    "when": "editorTextFocus"
  },
  {
    "key": "home c",
    "command": "copyRelativeFilePath"
  },
  {
    "key": "cmd+enter",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && isWeb"
  },
  {
    "key": "cmd+f12",
    "command": "-editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && isWeb"
  },
  {
    "key": "cmd+enter",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  {
    "key": "f12",
    "command": "-editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  {
    "key": "f12",
    "command": "editor.action.peekDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
  },
  {
    "key": "alt+f12",
    "command": "-editor.action.peekDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
  },
  {
    "key": "cmd+f12",
    "command": "editor.action.peekTypeDefinition"
  },
  {
    "key": "ctrl+shift+alt+cmd+i",
    "command": "workbench.panel.chat",
    "when": "workbench.panel.chat.view.copilot.active"
  },
  {
    "key": "ctrl+cmd+i",
    "command": "-workbench.panel.chat",
    "when": "workbench.panel.chat.view.copilot.active"
  },
  {
    "key": "ctrl+shift+alt+cmd+o",
    "command": "github.copilot.completions.toggle",
    "when": "github.copilot.activated"
  }
]
